<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus.onlinecanteen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity
            android:name=".activity.MainActivityMerchant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CartActivity"
            android:parentActivityName=".activity.UserOrderProductActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.UserHistoryActivity"
            android:parentActivityName=".activity.MainUserActivity" />
        <activity android:name=".activity.RegistrationMainActivity" />
        <activity android:name=".activity.RegisterProductActivity" />
        <activity android:name=".activity.DeleteProductActivity" />
        <activity android:name=".activity.RegisterStoreActivity" />
        <activity android:name=".activity.EditProductActivity" />
        <activity android:name=".activity.MerchantOrderDetailActivity" />
        <activity android:name=".activity.QrActivity" />
        <activity
            android:name=".activity.MainUserActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".activity.MainActivityAdmin" />
        <activity android:name=".activity.AdminTopUpActivity" />
        <activity android:name=".activity.AdminStoreWithdrawal" />
        <activity
            android:name=".activity.UserOrderProductActivity"
            android:parentActivityName=".activity.UserStoreProductActivity" />
        <activity
            android:name=".activity.UserStoreProductActivity"
            android:parentActivityName=".activity.MainUserActivity" />
        <activity android:name=".activity.MerchantProfileActivity"></activity>
    </application>

</manifest>